#!/usr/bin/env bash

# 2022-04-17: https://github.com/jD91mZM2/xidlehook looks cool but...rust? cargo? no .deb pkg I can find.

bg=$(find $HOME/bg/ -type f 2>/dev/null | grep png$ | shuf -n 1)

if [ "$bg" == "" ]; then
    $HOME/bin/trick_skel/blanker.sh no
    imageflag="--image=/tmp/dark_color_image.png"
else
    imageflag="--image=$bg"
fi

revert() {
    xset dpms
    xrandr --output "$(xrandr | awk '/ primary/{print $1}')" --brightness 1
}
trap revert HUP INT TERM
xset +dpms

i3lock --color=220000 --show-failed-attempts --ignore-empty-password $imageflag
# dangerous but useful in a pinch:
# i3lock --color=000000 --show-failed-attempts --ignore-empty-password --debug $imageflag | logger -t my-i3lock

revert
