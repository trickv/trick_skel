trick_skel_aliases () {
    # Core shell workflow aliases
    alias 'ls.'='ls -d .*'
    alias l='ls'
    alias ll='ls -l'
    alias ls="ls $LS_OPTIONS"
    alias lst='ls -ltrh'
    alias lss='ls -lSrh'
    #alias h='history | tail'
    alias h=trick_h
    alias j=jobs
    alias f=fg
    alias u=uptime
    alias diff='diff -Nru'
    alias nl='nl -ba'
    alias nicey='nice -n 19'
    
    # Application-specific aliases
    alias pico='nano -w'
    alias nano='nano -w'
    alias strdate='date -u +%Y%m%d-%H%M%S'
    alias 'ssh-keys'='ssh-add -l'
}

trick_skel_if_exists_then_alias () {
    # $1  command to see if it exists
    # $2  command to alias it to if it does exist

    which $1 &> /dev/null
    if [ $? -eq 0 ]; then
        if [ "$2" = "ls" ]; then
            alias $2="$1 $LS_OPTIONS"
        else
            alias $2=$1
        fi
    fi
}

