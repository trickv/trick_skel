trick_skel_aliases () {
    # Core shell workflow aliases
    alias 'ls.'='ls -d .*'
    alias 'lsl.'='ls -l -d .*'
    alias l='ls'
    alias ll='ls -l'
    alias ls="ls $LS_OPTIONS"
    alias sl=ls
    alias lst='ls -ltrh'
    alias lss='ls -lSrh'
    alias lsh='ls -lh'
    alias h=trick_h
    alias j=jobs
    alias jobs='jobs -l'
    alias f=fg
    alias u=uptime
    alias t=trick_skel_tree
    alias diff='diff -Nru'
    alias nl='nl -ba'
    alias nicey='nice -n 19'
    alias 'df.'='df -h .'
    alias dfh='df -h'
    alias 'du.'='du -hs .'
    alias duh='du -hs'
    alias ping1='ping -c 1'
    alias sudol='sudo -l'
    alias dmesgt=trick_skel_dmesg_tail
    alias crontabl='crontab -l'
    alias psg=trick_skel_psg
    alias vimp="vim -c 'set paste'"
    alias vimm=vim
    alias rehash='hash -r'
    alias screen='screen -U'
    alias proxyenv='env | grep -i proxy'
    alias noproxy=trick_skel_noproxy
    alias findbymac='arp -a -n | grep -i'
    alias grep='grep --color=auto'
    alias timezones='find /usr/share/zoneinfo/ | cut -d/ -f5-'
    alias wimi='curl http://automation.whatismyip.com/n09230945.asp; echo'

    # Mintel sudo usernames
    alias sudocs='trick_skel_sudo custom-services bash --login'
    alias sudods='trick_skel_sudo developer-svc bash --login'
    alias sudoreplicate='trick_skel_sudo replicate bash --login'
    alias sudoroot='trick_skel_sudo root bash --login'
    alias sudomysql='trick_skel_sudo mysql HOME=/tmp/mysql bash'
    alias sudopg='trick_skel_sudo `pguser` bash'
    alias sudoxls='trick_skel_sudo xls-svc bash --login'
    
    # Application-specific aliases
    alias pico='nano -w'
    alias nano='nano -w'
    alias strdate='date -u +%Y%m%d-%H%M%S'
    alias 'ssh-keys'='ssh-add -l'
    alias clearenv='source _source_clearenv'
    alias svn_id='svn propset svn:keywords Id'
    alias svnmerge='svnmerge.py'
    alias jpsql='psql -U `pguser` postgres'
    alias carps='ifconfig | grep ^carp -A 2'
    alias jails='jls | cut -d/ -f4- | grep -v JID'

    # git aliases
    alias 'git-st'='git-status'
    alias 'git-ci'='git-commit'
    alias 'git-diff'='git-diff --color'

    # if we're root, this is handy
    if [ "$USER" = "root" ]; then
        alias iptl='iptables -L -n -v'
        alias iptln='iptables -L -n -v -t nat'
        alias iptlm='iptables -L -n -v -t mangle'
    fi

    alias t=trick_skel_tree
    alias ptree=trick_skel_ptree
    alias tree=trick_skel_tree

    # `date` wrappers for timezones
    alias chicagotime='TZ=America/Chicago date'
    alias londontime='TZ=Europe/London date'
    alias utctime='TZ=UTC date'

    # freebsd-specific aliases
    if [ $TRICK_SKEL_IS_FREEBSD ]; then
        trick_skel_if_exists_then_alias ghead head
        trick_skel_if_exists_then_alias gtail tail
        trick_skel_if_exists_then_alias gls ls
        trick_skel_if_exists_then_alias grm rm
        trick_skel_if_exists_then_alias gsleep sleep
        trick_skel_if_exists_then_alias gsort sort
        trick_skel_if_exists_then_alias gmd5sum md5sum

        # w -i sorts by idle time. sadly not available on gnu.
        alias w='w -i'
    fi

}

# "Poor Man's Version" of tree:
trick_skel_ptree () {
    ls -R | grep ':$' | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g' -e 's/^/   /' -e 's/-/|/'
}

trick_skel_tree () {
    which tree &> /dev/null
    if [ $? -ne 0 ]; then
        trick_skel_ptree
    else
        tree $*
    fi
}

trick_skel_sudo () {
    echo -ne "\033]0;sudoooo $1@$HOSTNAME\007"
    sudo -H -u $*
}

trick_skel_if_exists_then_alias () {
    # $1  command to see if it exists
    # $2  command to alias it to if it does exist

    which $1 &> /dev/null
    if [ $? -eq 0 ]; then
        if [ "$2" = "ls" ]; then
            alias $2="$1 $LS_OPTIONS"
        else
            alias $2=$1
        fi
    fi
}

trick_skel_dmesg_tail () {
    dmesg | tail
}

trick_skel_psg () {
    ps auxwww | egrep -iv 'grep|ps auxwww' | grep -i $*
}

trick_skel_noproxy () {
    unset NO_PROXY
    unset http_proxy
    unset ftp_proxy
    unset FTP_PROXY
    unset https_proxy
    unset HTTPS_PROXY
    unset no_proxy
    unset HTTP_PROXY
}

# vim:filetype=sh
