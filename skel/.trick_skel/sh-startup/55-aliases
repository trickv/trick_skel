trick_skel_aliases () {
    # Core shell workflow aliases
    alias 'ls.'='ls -d .*'
    alias l='ls'
    alias ll='ls -l'
    alias ls="ls $LS_OPTIONS"
    alias lst='ls -ltrh'
    alias lss='ls -lSrh'
    alias lsh='ls -lh'
    alias h=trick_h
    alias j=jobs
    alias jobs='jobs -l'
    alias f=fg
    alias u=uptime
    alias t=tree
    alias diff='diff -Nru'
    alias nl='nl -ba'
    alias nicey='nice -n 19'
    alias 'df.'='df -h .'
    alias dfh='df -h'
    alias 'du.'='du -hs .'
    alias duh='du -hs'
    alias ping1='ping -c 1'
    alias sudol='sudo -l'
    alias dmesgt=trick_skel_dmesg_tail
    alias crontabl='crontab -l'
    
    # Application-specific aliases
    alias pico='nano -w'
    alias nano='nano -w'
    alias strdate='date -u +%Y%m%d-%H%M%S'
    alias 'ssh-keys'='ssh-add -l'
    alias clearenv='source _source_clearenv'

    # `date` wrappers for timezones
    alias chicagotime='TZ=America/Chicago date'
    alias londontime='TZ=Europe/London date'
    alias utctime='TZ=UTC date'
}

trick_skel_if_exists_then_alias () {
    # $1  command to see if it exists
    # $2  command to alias it to if it does exist

    which $1 &> /dev/null
    if [ $? -eq 0 ]; then
        if [ "$2" = "ls" ]; then
            alias $2="$1 $LS_OPTIONS"
        else
            alias $2=$1
        fi
    fi
}

trick_skel_dmesg_tail () {
    dmesg | tail
}

