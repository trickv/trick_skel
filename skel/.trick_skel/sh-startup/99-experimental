trick_skel_screen_relay () {
    MONITOR_HOST=sting.vanstaveren.us
    ssh $MONITOR_HOST "mkdir -p /home/trick/public_html/monitor/`hostname -s`"

    if [ "$1" = "" ]; then
        SLEEP_LENGTH=60
    else
        SLEEP_LENGTH=$1
    fi

    while [ true ]; do
        date
        xwd -root > /tmp/trick_skel_screenshot
        convert /tmp/trick_skel_screenshot /tmp/trick_skel_screenshot.png
        scp /tmp/trick_skel_screenshot.png $MONITOR_HOST:/home/trick/public_html/monitor/`hostname -s`/cur.png
        sleep $SLEEP_LENGTH
    done
}


# vim:filetype=sh


