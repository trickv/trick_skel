#!/usr/bin/env bash

count=0

while [ true ]; do
    terminal-title PSSH: reconnecting
    ssh -o ConnectTimeout=5 $*
    if [ $? -eq 0 ]; then
        exit
    fi
    let count=$count+1
    if [ $count -gt 1000 ]; then
        echo "pssh: exiting with excessive retries"
        exit 1
    fi
    echo "pssh: retrying ($count)..."
    terminal-title "pssh: retrying ($count)..."
    sleep 1
done
