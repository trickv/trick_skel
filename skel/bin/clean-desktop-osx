#!/usr/bin/env bash

if [ `uname` != "Darwin" ]; then
    echo "This is meant to run on OSX! :P"
    exit 1
fi

which find &> /dev/null
if [ $? -ne 0 ]; then
    echo "find is not installed."
    exit 1
fi

set -e
set -u

cd $HOME/Desktop/
mkdir -p archive
#find . ! -path "*archive*" -and ! -path "." -and ! -name "desktop.ini" -and ! -name "*.lnk" -and -atime +7 -print0 | xargs -0 -n 1 -I % mv "%" archive/
find . ! -path "*archive*" -and ! -path "." -and ! -name "desktop.ini" -and ! -name "*.lnk" -and -atime +7 -print
