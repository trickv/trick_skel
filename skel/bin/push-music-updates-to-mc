#!/usr/bin/env bash

dryrun="--dry-run"

if [ "$1" = "--real" ]; then
    echo "Actually committing changes!"
    sleep 5
    dryrun=""
else
    echo "Dry run..."
fi

if [ "$HOSTNAME" == "atlas" ]; then
    echo "Limiting bandwidth to 50 kb/sec because this is atlas"
    bwlimit="--bwlimit 50"
fi

rsync --exclude=".timestamp-hourly" $bwlimit --archive --verbose  --partial --delete-after --progress $dryrun $HOME/Music/ rsync://mc/music/
