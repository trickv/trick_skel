#!/usr/bin/env bash

host=$1

base=420

forwards=""
for i in $(seq -f "%02g" 00 49); do
    local="${base}${i}"
    remote="59${i}"
    forwards="$forwards -L $local:localhost:$remote"
done

echo "SSH'ing to $host and Forwarding 50 ports ranging from ${base}00 to remote localhost:5900 onwards."

echo $forwards

ssh -C -c arcfour $forwards $*
