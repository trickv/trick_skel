conky.config = {
    alignment = 'top_right',
    background = false,
    font = 'Courier:size=12',
    gap_x = 10,
    gap_y = 10,
    minimum_height = 500,
    minimum_width = 365,
    no_buffers = true,
    update_interval = 1,
    use_xft = true,
}

conky.text = [[
${font Open Sans Light:pixelsize=80}${time %H:%M:%S}${font}
${font Open Sans Light:pixelsize=40}${time %Y-%m-%d %Z}${font}
${color #FF0000}$nodename - $sysname $kernel
${color #0000FF}Uptime: $uptime
RAM: $memperc% ${membar 8}
Swap:$swapperc% ${swapbar 8}
CPU: $cpu% ${cpubar 8}
CPU Temp: ${acpitemp}C
${color #FFFF00}/       ${fs_used /}/${fs_size /}${alignr}${fs_used_perc /}%
${fs_bar 8 /}

${color #33FFFF}apt upgradeable: ${execi 3600 apt list --upgradeable 2>/dev/null | wc -l}

${color #33FFFF}earlyoom:
${font Monospace:pixelsize=10}${execi 10 journalctl -u earlyoom | grep -e "Low Memory\|Killing" | cut -d\  -f1-3,6- | cut -b1-80}
]]
