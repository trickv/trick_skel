#!/bin/sh

atlas=172.17.2.255
export PATH=$PATH:/usr/local/bin

cd $HOME/src/trick_skel
if [ $? -ne 0 ]; then
    echo "can't cd to trick_skel, bailing out"
    exit
fi

TRICK_HOSTNAME=`hostname -s`

if [ "${TRICK_HOSTNAME}" = "atlas" ]; then
    source ~/.proxy_auth
fi

case $TRICK_HOSTNAME in
    sting|mc|sam|atlas)
        svn up > /dev/null
        break;;
    cartman|bigweld|doobie|willow)
        #rsync rsync://${atlas}/trick_skel/ . -a --del
        ./update-mintel-rsync.sh
        break;;
esac

./install.sh > /dev/null
