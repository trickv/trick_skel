# trick_skel i3status config
# $Id$
# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "ethernet bnep0"
#order += "tztime local"
order += "tztime chicago"
order += "tztime london"
order += "tztime singapore"

volume master {
        format = "â™ª %volume"
        format_muted = "â™ª muted (%volume)"
        device = "pulse:0"
}

wireless _first_ {
        format_up = "W: (%quality at %essid %frequency) %ip"
        format_down = "W"
        color_bad = "#1199ff"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E"
        color_bad = "#1199ff"
}

ethernet bnep0 {
        # if you use %speed, i3status requires root privileges
        format_up = "bt: %ip"
        format_down = "bt"
        color_bad = "#1199ff"
}

battery all {
        format = "ðŸ”‹ %status %percentage %remaining"
        status_full = "FULL"
}

tztime local {
        format = "local: %Y-%m-%d %H:%M:%S"
}

tztime london {
        format = "LON %H:%M:%S"
        timezone = "Europe/London"
}

tztime chicago {
        format = "CHI %H:%M:%S"
        timezone = "America/Chicago"
}

tztime singapore {
        format = "SIN %H:%M:%S"
        timezone = "Asia/Singapore"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

battery all {
        format = "%status %percentage %remaining %consumption"
}

