 DEST=$HOME/.trick_skel/sh-startup/40-ls-options

uname -a | egrep 'FreeBSD 4.11' 2>&1 > /dev/null
if [ $? -eq 0 ]; then
    echo "export LS_OPTIONS='-F'" > $DEST
else
    echo "export LS_OPTIONS='--color=auto -F'" > $DEST
fi

which dircolors &> /dev/null
if [ $? -eq 0 ]; then
    dircolors -b | grep '^LS_COLORS' >> $DEST
fi

which gdircolors &> /dev/null
if [ $? -eq 0 ]; then
    gdircolors | grep '^LS_COLORS' >> $DEST
fi

# vim:ft=sh
